.card {
  .card-header {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 250px;
    background-size: cover !important;

    .highlighted {
      background: rgba(0,0,0,0.20);
      padding: 5px;
    }
  }
  .card-body {
    .quiz-form {
      label, input {
        margin: 0;
        cursor: pointer;

        &[disabled] {
          cursor: disabled;
        }
      }
    }
  }
}
