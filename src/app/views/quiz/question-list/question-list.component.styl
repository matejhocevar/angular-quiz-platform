@import '../../../../variables.styl';

.questions-list {
  overflow: visible;

  .list-group {
    background: #fff;

    &.list {
      padding-top: 25px;
    }

    .list-group-item {
      border-radius: $border-radius;
      border: none;
      outline: none;
      cursor: pointer;

      * {
        display: inline-block;
      }

      &:hover {
        .drag-handle, .remove-handle {
          display: inline-block;
          opacity: 1;
          position: relative;
          z-index: 10;
        }
      }
    }
  }

  .drag-handle {
    opacity: 0;
    cursor: grab;
  }

  .remove-handle {
    opacity: 0;
    cursor: pointer;
  }
}

