@import 'variables.styl';
@import 'assets/fonts/fonts.styl';

html {
  height: 100%;

  body {
    display: block;
    height: 100%;
    color: $page-color;
    background: $page-bg-color;

    input, textarea {
      border: none;
      border: $input-style !important;
      border-radius: $input-radius !important;
    }
    input[type=checkbox], input[type=radio] {
      display: inline-block;
      width: auto;
      margin-right: 10px;
    }

    input[type=checkbox] + label,
    input[type=radio] + label {
      display: inline-block;
    }

    .page {
      display: flex;
      height: 100%;
      flex-direction: column;
      flex-wrap: nowrap;
      justify-content: center;
      align-content: stretch;
      align-items: stretch;
    }
  }
}

.slanted {
  display: block;
  position: relative;
  left: -15px;
  bottom: -15px;
  padding: 20px 30px 0; /* border space */
  width: $h3-width;
  overflow: hidden;
  z-index: 10;

  h3 {
    width: $h3-width;
    height: 45px;
    margin: 0;
    color: #fff;
    background: #8dc26f;
    z-index: 10;
  }
}
.slanted:before,
.slanted:after,
.slanted-top:before {
  position: absolute;
  top: 20px;
  left: 0;
  border: solid transparent;
  border-top-color: #8DC26F;
  border-width: $h3-width 0 0 30px; /* left border (top as max box height) */
  width: 0;
  height: 0;
  content: "\a0";
}
.slanted:after {
  right: 0;
  left: auto;
  border-width: $h3-width 30px 0 0; /* right border (top as max box height) */
}
.slanted-top:before {
  position: absolute;
  top: 0;
  border-color: transparent;
  border-left-color: #8DC26F;
  border-width: 20px 0 0 $h3-width; /* top border width+padding (left as box length) */
}
